@using RikaWebApp.Models;
@using RikaWebApp.Models.Auth
@using RikaWebApp.ViewModels

@model SignUpModel;

@{
    ViewData["Title"] = "Model.Title";
}
 
<section id="register">

   

    <div class="container register-container">
        
        <div class="title-center">
            <img src="https://storagerika.blob.core.windows.net/files/logo_black.png" alt="onboarding">

        </div>
        <div class="sign-up-title">
            <h3>Sign up</h3>
            <p>Create a new account</p>
        </div>
        @if (TempData["ErrorRegister"] != null)
        {
            <span class="error-message">Email is already in use</span>
        }
        
        <div class="form">
            <form id="RegisterForm" asp-action="SignUp" asp-controller="SignUp" method="post" novalidate>

              
                
                
                <div class="input-group">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for ="FirstName" type="text">
                    <span asp-validation-for="FirstName" ></span>
                </div>

                <div class="input-group">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" type="text">
                    <span asp-validation-for="LastName" ></span>
                </div>

                <div class="input-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email">
                    <span asp-validation-for="Email" ></span>
                </div>

                <div class="input-group">
                    <label asp-for="Password">Password</label>
                    <div class="input-and-eye">
                        <input asp-for="Password" type="password">
                        <div class="eye">
                            <i class="fa-solid fa-eye-slash"></i>
                            <i style="display: none;" class="fa-solid fa-eye"></i>
                        </div>
                    </div>
                    <span asp-validation-for="Password" ></span>
                </div>

                <div class="input-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <div class="input-and-eye">
                        <input asp-for="ConfirmPassword" type="password">
                        <div class="eye">
                            <i class="fa-solid fa-eye-slash"></i>
                            <i style="display: none;" class="fa-solid fa-eye"></i>
                        </div>
                    </div>
                    <span asp-validation-for="ConfirmPassword" ></span>
                </div>
                
                <div>
                    <div class="checkbox-and-text">
                        <input asp-for="TermsAndConditions" type="checkbox">
                        <p>By creating an account you have to agree with our terms & conditions.</p>
                    </div>
                    <span asp-validation-for="TermsAndConditions"></span>
                </div>
                <button type="submit" class="btn-round btn-sign-up">Register</button>
            </form>
        </div>
    </div>
</section>


